# trunk-ignore-all(checkov/CKV_DOCKER_2)
FROM node:24-alpine
WORKDIR /app
ENV NODE_ENV=development

COPY package.json package-lock.json ./
RUN npm ci

COPY . .

EXPOSE 3000
# Regenerate tsconfig at runtime using THEME from mounted .env
CMD ["sh", "-c", "node -e \"const fs=require('fs');const tpl=fs.readFileSync('tsconfig.base.json','utf8');const theme=process.env.THEME||'cpr';fs.writeFileSync('tsconfig.json',tpl.replace(/__THEME__/g,theme));\" && npm ci && npm run dev"]
